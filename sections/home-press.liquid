{%- comment -%} Homepage Press Logos Section {%- endcomment -%}
<section class="home-press">
  <h2 class="home-press__title">As Seen In</h2>
  <div class="home-press__logos">
    <img src="{{ 'press-logo-1.svg' | asset_url }}" alt="Press 1" class="home-press__logo" width="120" height="36">
    <img src="{{ 'press-logo-2.svg' | asset_url }}" alt="Press 2" class="home-press__logo" width="120" height="36">
    <img src="{{ 'press-logo-3.svg' | asset_url }}" alt="Press 3" class="home-press__logo" width="120" height="36">
    <img src="{{ 'press-logo-4.svg' | asset_url }}" alt="Press 4" class="home-press__logo" width="120" height="36">
    <img src="{{ 'press-logo-5.svg' | asset_url }}" alt="Press 5" class="home-press__logo" width="120" height="36">
  </div>
</section>

<style>
.home-press {
  background: #fff;
  padding: 2.5rem 0 2rem 0;
  font-family: 'Inter', 'Helvetica Neue', Arial, sans-serif;
}
.home-press__title {
  text-align: center;
  font-size: 1.3rem;
  font-weight: 600;
  color: #183642;
  margin-bottom: 1.5rem;
  letter-spacing: 0.1em;
}
.home-press__logos {
  display: flex;
  justify-content: center;
  align-items: center;
  gap: 2.5rem;
  flex-wrap: wrap;
}
.home-press__logo {
  height: 36px;
  opacity: 0.7;
  filter: grayscale(1);
  transition: opacity 0.2s;
}
.home-press__logo:hover {
  opacity: 1;
}
</style>

{% schema %}
{
  "name": "Home Press Logos",
  "settings": [],
  "presets": [
    { "name": "Home Press Logos" }
  ]
}
{% endschema %} 