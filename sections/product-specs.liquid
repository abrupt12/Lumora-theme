{%- comment -%} Product Technical Specs Section {%- endcomment -%}
<div class="product-specs">
  <h2 class="product-specs__title">Technical Specs</h2>
  <div class="product-specs__grid">
    <div>
      <strong>Width</strong>
      <div>16.5 in</div>
    </div>
    <div>
      <strong>Height</strong>
      <div>26.7 in</div>
    </div>
    <div>
      <strong>Depth</strong>
      <div>1.2 in</div>
    </div>
    <div>
      <strong>Weight</strong>
      <div>16 lbs</div>
    </div>
    <div>
      <strong>Internet</strong>
      <div>Dual-band 802.11 A/B/G/N Wi-Fi</div>
    </div>
    <div>
      <strong>Power</strong>
      <div>AC110-120V 50/60Hz</div>
    </div>
  </div>
</div>

<style>
.product-specs {
  background: #fff;
  border-radius: 18px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.04);
  padding: 2.5rem 2rem;
  margin: 2rem 0;
  max-width: 700px;
  margin-left: auto;
  margin-right: auto;
}
.product-specs__title {
  font-size: 1.5rem;
  font-weight: 600;
  color: #183642;
  margin-bottom: 1.5rem;
  text-align: center;
}
.product-specs__grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 1.5rem 2rem;
  font-size: 1.1rem;
  color: #183642;
}
.product-specs__grid strong {
  color: #00c2b3;
  font-weight: 600;
}
@media (max-width: 600px) {
  .product-specs__grid {
    grid-template-columns: 1fr;
  }
}
</style>

{% schema %}
{
  "name": "Product Specs",
  "settings": [],
  "presets": [
    {
      "name": "Product Specs"
    }
  ]
}
{% endschema %} 