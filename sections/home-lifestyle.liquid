  font-weight: 600;
  color: #00c2b3;
  margin-bottom: 0.7rem;
}
.home-lifestyle__desc {
  color: #183642;
  font-size: 1rem;
}
@media (max-width: 900px) {
  .home-lifestyle__timeline {
    flex-direction: column;
    gap: 1.5rem;
    align-items: center;
  }
}
