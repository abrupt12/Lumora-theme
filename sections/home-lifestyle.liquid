  max-width: 1100px;
  margin: 0 auto;
}
.home-lifestyle__event {
  background: #faf7f2;
  border-radius: 18px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.04);
  padding: 2rem 1.5rem;
  min-width: 220px;
  max-width: 260px;
  flex: 1 1 220px;
  text-align: center;
}
