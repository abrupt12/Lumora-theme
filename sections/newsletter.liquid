{% schema %}
{
  "name": "Newsletter",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Subscribe to our newsletter"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Subscribe to get special offers, free giveaways, and once-in-a-lifetime deals.</p>"
    },
    {
      "type": "color",
      "id": "background",
      "label": "Background",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Newsletter",
      "category": "Promotional"
    }
  ]
}
{% endschema %}

<div class="newsletter" style="background-color: {{ section.settings.background }}">
  <div class="newsletter__wrapper">
    {%- if section.settings.heading != blank -%}
      <h2 class="newsletter__heading">{{ section.settings.heading | escape }}</h2>
    {%- endif -%}
    
    {%- if section.settings.subtext != blank -%}
      <div class="newsletter__subtext">{{ section.settings.subtext }}</div>
    {%- endif -%}

    {% form 'customer', class: 'newsletter__form' %}
      <input type="hidden" name="contact[tags]" value="newsletter">
      <div class="newsletter__field">
        <input
          type="email"
          name="contact[email]"
          id="NewsletterForm--{{ section.id }}"
          class="newsletter__input"
          value="{{ form.email }}"
          placeholder="{{ 'newsletter.label' | t }}"
          required
        >
        <button type="submit" class="newsletter__button" name="commit">
          {{ 'newsletter.button_label' | t }}
        </button>
      </div>
      {%- if form.errors -%}
        <div class="newsletter__error">
          {{ form.errors | default_errors }}
        </div>
      {%- endif -%}
      {%- if form.posted_successfully? -%}
        <div class="newsletter__success">
          {{ 'newsletter.success' | t }}
        </div>
      {%- endif -%}
    {% endform %}
  </div>
</div>

{% stylesheet %}
.newsletter {
  padding: 60px 20px;
  text-align: center;
}

.newsletter__wrapper {
  max-width: 600px;
  margin: 0 auto;
}

.newsletter__heading {
  margin-bottom: 20px;
  font-size: 1.8rem;
}

.newsletter__subtext {
  margin-bottom: 30px;
}

.newsletter__form {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.newsletter__field {
  display: flex;
  gap: 10px;
}

@media screen and (max-width: 749px) {
  .newsletter__field {
    flex-direction: column;
  }
}

.newsletter__input {
  flex-grow: 1;
  padding: 12px 15px;
  border: 1px solid rgba(var(--color-foreground), 0.1);
  border-radius: 4px;
}

.newsletter__button {
  padding: 12px 25px;
  background-color: rgba(var(--color-button), 1);
  color: rgba(var(--color-button-text), 1);
  border: none;
  border-radius: 4px;
  cursor: pointer;
  transition: background-color 0.3s;
}

.newsletter__button:hover {
  background-color: rgba(var(--color-button), 0.8);
}

.newsletter__error {
  color: #dc3545;
  margin-top: 10px;
}

.newsletter__success {
  color: #28a745;
  margin-top: 10px;
}
{% endstylesheet %} 