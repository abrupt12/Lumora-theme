<div class="video-hero" style="background-color: {{ section.settings.overlay_color }}">
  <div class="video-hero__background">
    {%- if section.settings.video_url != blank -%}
      <video autoplay loop muted playsinline class="video-hero__video">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.background_image != blank -%}
      <img src="{{ section.settings.background_image | img_url: 'master' }}"
        alt=""
        class="video-hero__image"
        loading="lazy">
    {%- endif -%}
  </div>

  <div class="video-hero__overlay"></div>

  <div class="page-width">
    <div class="video-hero__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="video-hero__heading">
          {{ section.settings.heading }}
          {%- if section.settings.heading_highlight != blank -%}
            <span class="video-hero__highlight">{{ section.settings.heading_highlight }}</span>
          {%- endif -%}
        </h1>
      {%- endif -%}

      {%- if section.settings.subtext != blank -%}
        <div class="video-hero__text">{{ section.settings.subtext }}</div>
      {%- endif -%}

      {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="button video-hero__button">
          {{ section.settings.button_text }}
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
.video-hero {
  position: relative;
  height: 100vh;
  min-height: 600px;
  display: flex;
  align-items: center;
  color: {{ section.settings.text_color }};
  overflow: hidden;
}

.video-hero__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}

.video-hero__video,
.video-hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: {{ section.settings.overlay_color }};
  opacity: {{ section.settings.overlay_opacity }};
}

.video-hero__content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
  padding: 0 20px;
}

.video-hero__heading {
  font-size: 4rem;
  line-height: 1.2;
  margin-bottom: 1.5rem;
  font-weight: 600;
}

.video-hero__highlight {
  display: inline-block;
  background: {{ section.settings.highlight_color }};
  padding: 0.2em 0.5em;
  border-radius: 8px;
}

.video-hero__text {
  font-size: 1.25rem;
  margin-bottom: 2rem;
  line-height: 1.6;
}

.video-hero__button {
  display: inline-block;
  padding: 1em 2em;
  background: {{ section.settings.button_background }};
  color: {{ section.settings.button_text_color }};
  text-decoration: none;
  border-radius: 4px;
  font-weight: 500;
  transition: transform 0.2s, opacity 0.2s;
}

.video-hero__button:hover {
  transform: translateY(-2px);
  opacity: 0.9;
}

@media screen and (max-width: 768px) {
  .video-hero__heading {
    font-size: 2.5rem;
  }

  .video-hero__text {
    font-size: 1.1rem;
  }
}
</style>

{% schema %}
{
  "name": "Video Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Don't let planning get in the way of"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Highlighted text",
      "default": "playtime"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Hearth is a household organization tool that helps families prioritize what matters most.</p>"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (fallback)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Hearth"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity",
      "default": 0.4
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight background",
      "default": "#00f0e5"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#00f0e5"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Video Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %} 