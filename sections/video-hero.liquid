{%- style -%}
.video-hero-{{ section.id }} {
  --overlay-opacity: {{ section.settings.overlay_opacity }};
}
{%- endstyle -%}

<div class="video-hero video-hero-{{ section.id }}" style="background-color: {{ section.settings.overlay_color }}">
  <div class="video-hero__background">
    {%- if section.settings.video_url != blank -%}
      <video 
        autoplay 
        loop 
        muted 
        playsinline 
        class="video-hero__video"
        poster="{{ section.settings.background_image | image_url: width: 1920 }}"
      >
        <source src="{{ section.settings.video_url | asset_url }}" type="video/mp4">
        {%- if section.settings.background_image != blank -%}
          <img 
            src="{{ section.settings.background_image | image_url: width: 1920 }}"
            srcset="{%- if section.settings.background_image.width >= 375 -%}{{ section.settings.background_image | image_url: width: 375 }} 375w,{%- endif -%}
              {%- if section.settings.background_image.width >= 750 -%}{{ section.settings.background_image | image_url: width: 750 }} 750w,{%- endif -%}
              {%- if section.settings.background_image.width >= 1100 -%}{{ section.settings.background_image | image_url: width: 1100 }} 1100w,{%- endif -%}
              {%- if section.settings.background_image.width >= 1500 -%}{{ section.settings.background_image | image_url: width: 1500 }} 1500w,{%- endif -%}
              {%- if section.settings.background_image.width >= 1920 -%}{{ section.settings.background_image | image_url: width: 1920 }} 1920w,{%- endif -%}"
            sizes="100vw"
            alt=""
            class="video-hero__image"
            loading="eager"
            width="{{ section.settings.background_image.width }}"
            height="{{ section.settings.background_image.height }}"
          >
        {%- endif -%}
      </video>
    {%- elsif section.settings.background_image != blank -%}
      <img 
        src="{{ section.settings.background_image | image_url: width: 1920 }}"
        srcset="{%- if section.settings.background_image.width >= 375 -%}{{ section.settings.background_image | image_url: width: 375 }} 375w,{%- endif -%}
          {%- if section.settings.background_image.width >= 750 -%}{{ section.settings.background_image | image_url: width: 750 }} 750w,{%- endif -%}
          {%- if section.settings.background_image.width >= 1100 -%}{{ section.settings.background_image | image_url: width: 1100 }} 1100w,{%- endif -%}
          {%- if section.settings.background_image.width >= 1500 -%}{{ section.settings.background_image | image_url: width: 1500 }} 1500w,{%- endif -%}
          {%- if section.settings.background_image.width >= 1920 -%}{{ section.settings.background_image | image_url: width: 1920 }} 1920w,{%- endif -%}"
        sizes="100vw"
        alt=""
        class="video-hero__image"
        loading="eager"
        width="{{ section.settings.background_image.width }}"
        height="{{ section.settings.background_image.height }}"
      >
    {%- endif -%}
  </div>

  <div class="video-hero__overlay"></div>

  <div class="page-width">
    <div class="video-hero__content">
      {%- if section.settings.heading != blank -%}
        <h1 class="video-hero__heading">
          {{ section.settings.heading }}
          {%- if section.settings.heading_highlight != blank -%}
            <span class="video-hero__highlight">{{ section.settings.heading_highlight }}</span>
          {%- endif -%}
        </h1>
      {%- endif -%}

      {%- if section.settings.subtext != blank -%}
        <div class="video-hero__text">{{ section.settings.subtext }}</div>
      {%- endif -%}

      {%- if section.settings.button_text != blank and section.settings.button_link != blank -%}
        <a href="{{ section.settings.button_link }}" class="button video-hero__button">
          {{ section.settings.button_text }}
          <span class="video-hero__button-arrow" aria-hidden="true">â†’</span>
        </a>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
.video-hero {
  position: relative;
  height: 100vh;
  min-height: 600px;
  max-height: 800px;
  display: flex;
  align-items: center;
  color: {{ section.settings.text_color }};
  overflow: hidden;
}

.video-hero__background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: {{ section.settings.overlay_color }};
}

.video-hero__video,
.video-hero__image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.video-hero__overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: {{ section.settings.overlay_color }};
  opacity: var(--overlay-opacity);
  transition: opacity 0.3s ease;
}

.video-hero__content {
  position: relative;
  z-index: 2;
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
  padding: 0 20px;
  animation: fadeInUp 1s ease;
}

.video-hero__heading {
  font-size: clamp(2.5rem, 5vw, 4rem);
  line-height: 1.2;
  margin-bottom: 1.5rem;
  font-weight: 600;
}

.video-hero__highlight {
  display: inline-block;
  background: {{ section.settings.highlight_color }};
  padding: 0.2em 0.5em;
  border-radius: 8px;
  white-space: nowrap;
}

.video-hero__text {
  font-size: clamp(1.1rem, 2vw, 1.25rem);
  margin-bottom: 2rem;
  line-height: 1.6;
  max-width: 600px;
  margin-left: auto;
  margin-right: auto;
}

.video-hero__button {
  display: inline-flex;
  align-items: center;
  gap: 0.5em;
  padding: 1em 2em;
  background: {{ section.settings.button_background }};
  color: {{ section.settings.button_text_color }};
  text-decoration: none;
  border-radius: 4px;
  font-weight: 500;
  transition: transform 0.2s, opacity 0.2s;
}

.video-hero__button:hover {
  transform: translateY(-2px);
  opacity: 0.9;
}

.video-hero__button-arrow {
  transition: transform 0.2s ease;
}

.video-hero__button:hover .video-hero__button-arrow {
  transform: translateX(4px);
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@media screen and (max-width: 989px) {
  .video-hero {
    min-height: 500px;
  }
}

@media screen and (max-width: 749px) {
  .video-hero {
    min-height: 400px;
  }

  .video-hero__content {
    padding: 0 15px;
  }
}

@media (prefers-reduced-motion: reduce) {
  .video-hero__content {
    animation: none;
  }

  .video-hero__button,
  .video-hero__button-arrow {
    transition: none;
  }
}
</style>

{% schema %}
{
  "name": "Video Hero",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Don't let planning get in the way of"
    },
    {
      "type": "text",
      "id": "heading_highlight",
      "label": "Highlighted text",
      "default": "playtime"
    },
    {
      "type": "richtext",
      "id": "subtext",
      "label": "Subtext",
      "default": "<p>Hearth is a household organization tool that helps families prioritize what matters most.</p>"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image (fallback)"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Shop Hearth"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "overlay_color",
      "label": "Overlay color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 1,
      "step": 0.1,
      "label": "Overlay opacity",
      "default": 0.4
    },
    {
      "type": "color",
      "id": "highlight_color",
      "label": "Highlight background",
      "default": "#00f0e5"
    },
    {
      "type": "color",
      "id": "button_background",
      "label": "Button background",
      "default": "#00f0e5"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Video Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %} 